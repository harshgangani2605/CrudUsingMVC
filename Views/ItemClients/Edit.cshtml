@model MyApp1.Models.ItemClient

@{
    ViewData["Title"] = "Edit ItemClient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit ItemClient</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ItemId" />
    <input type="hidden" asp-for="ClientId" />

    <div class="form-group">
        <label asp-for="ItemId"></label>
        <select asp-for="ItemId" asp-items="ViewBag.ItemId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ClientId"></label>
        <select asp-for="ClientId" asp-items="ViewBag.ClientId" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
